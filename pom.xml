<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <artifactId>algorithm-presenter</artifactId>
  <build>
    <plugins>
      <!-- general -->
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
        </configuration>
        <groupId>org.apache.maven.plugins</groupId>
        <version>${maven-compiler.version}</version>
      </plugin>

      <plugin>
        <artifactId>exec-maven-plugin</artifactId>
        <configuration>
          <mainClass>${main-class}</mainClass>
        </configuration>
        <groupId>org.codehaus.mojo</groupId>
        <version>${exec-maven.version}</version>
      </plugin>

      <!--      <plugin>-->
      <!--        <groupId>org.springframework.boot</groupId>-->
      <!--        <artifactId>spring-boot-maven-plugin</artifactId>-->
      <!--        <version>${spring-boot-maven-version}</version>-->
      <!--        <goals>-->
      <!--          <goal>run</goal>-->
      <!--        </goals>-->
      <!--      </plugin>-->

      <plugin>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <executions>
          <execution>
            <configuration>
              <classifier>spring-boot</classifier>
              <mainClass>
                com.algorithmpresenter.AlgorithmPresenterApplication
              </mainClass>
            </configuration>
            <goals>
              <goal>repackage</goal>
            </goals>
          </execution>
        </executions>
        <groupId>org.springframework.boot</groupId>
        <version>${spring-boot-maven-version}</version>
      </plugin>

      <!-- linter -->
      <plugin>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <configuration>
          <configLocation>checkstyle.xml</configLocation>
          <consoleOutput>true</consoleOutput>
          <encoding>UTF-8</encoding>
        </configuration>
        <groupId>org.apache.maven.plugins</groupId>
        <version>${checkstyle.version}</version>
      </plugin>

      <!-- test -->
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <groupId>org.apache.maven.plugins</groupId>
        <version>${maven-surefire.version}</version>
      </plugin>

      <!-- code coverage -->
      <plugin>
        <artifactId>jacoco-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>prepare-agent</goal>
            </goals>
          </execution>
          <execution>
            <goals>
              <goal>report</goal>
            </goals>
            <id>generate-code-coverage-report</id>
            <phase>verify</phase>
          </execution>
        </executions>
        <groupId>org.jacoco</groupId>
        <version>${jacoco-maven.version}</version>
      </plugin>

      <plugin>
        <!-- avoid third parties dependencies duplication
            warnings -->
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <forceCreation>true</forceCreation>
        </configuration>
        <groupId>org.apache.maven.plugins</groupId>
        <version>${maven-jar.version}</version>
      </plugin>

      <!-- deployment -->
      <plugin>
        <artifactId>heroku-maven-plugin</artifactId>
        <configuration>
          <appName>${heroku-maven.appName}</appName>
          <buildpacks>
            <buildpack>heroku/jvm</buildpack>
          </buildpacks>
          <includeTarget>false</includeTarget>
          <includes>
            <include>target/${jar-file-name}.jar</include>
          </includes>
          <jdkVersion>${java.version}</jdkVersion>
          <processTypes>
            <web>java -Dport=$PORT -jar target/${jar-file-name}.jar</web>
          </processTypes>
        </configuration>
        <groupId>com.heroku.sdk</groupId>
        <version>${heroku-maven.version}</version>
      </plugin>
    </plugins>
  </build>
  <dependencies>

    <!-- Spring Framework-->
    <dependency>
      <artifactId>spring-boot-starter-webflux</artifactId>
      <groupId>org.springframework.boot</groupId>
    </dependency>

    <dependency>
      <artifactId>spring-boot-starter-data-jpa</artifactId>
      <groupId>org.springframework.boot</groupId>
    </dependency>

    <dependency>
      <artifactId>spring-boot-starter-thymeleaf</artifactId>
      <groupId>org.springframework.boot</groupId>
    </dependency>

    <dependency>
      <artifactId>spring-boot-starter-web</artifactId>
      <groupId>org.springframework.boot</groupId>
    </dependency>

    <dependency>
      <artifactId>spring-boot-devtools</artifactId>
      <groupId>org.springframework.boot</groupId>
      <optional>true</optional>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <artifactId>spring-core</artifactId>
      <groupId>org.springframework</groupId>
    </dependency>

    <!-- Spring MySQL framework-->
    <dependency>
      <artifactId>mysql-connector-java</artifactId>
      <groupId>mysql</groupId>
      <scope>runtime</scope>
    </dependency>

    <!-- Spring Test framework-->
    <dependency>
      <artifactId>spring-boot-starter-test</artifactId>
      <exclusions>
        <exclusion>
          <artifactId>junit-vintage-engine</artifactId>
          <groupId>org.junit.vintage</groupId>
        </exclusion>
      </exclusions>
      <groupId>org.springframework.boot</groupId>
      <scope>test</scope>
    </dependency>

    <!-- Mockito Test framework-->
    <dependency>
      <artifactId>mockito-core</artifactId>
      <groupId>org.mockito</groupId>
      <scope>test</scope>
      <version>${mockito-version}</version>
    </dependency>

    <!-- Js client-->
    <dependency>
      <artifactId>webjars-locator-core</artifactId>
      <groupId>org.webjars</groupId>
    </dependency>

    <dependency>
      <artifactId>sockjs-client</artifactId>
      <groupId>org.webjars</groupId>
      <version>${sockjs-client-version}</version>
    </dependency>

    <dependency>
      <artifactId>stomp-websocket</artifactId>
      <groupId>org.webjars</groupId>
      <version>${stomp-websocket-version}</version>
    </dependency>

    <!-- JQuery-->
    <dependency>
      <artifactId>jquery</artifactId>
      <groupId>org.webjars</groupId>
      <version>${jquery-verison}</version>
    </dependency>

    <!-- Bootstrap-->
    <dependency>
      <artifactId>bootstrap</artifactId>
      <groupId>org.webjars</groupId>
      <version>${bootstrap-version}</version>
    </dependency>
    <dependency>
      <artifactId>junit</artifactId>
      <groupId>junit</groupId>
      <scope>test</scope>
    </dependency>

    <!-- Java reflection-->
    <dependency>
      <artifactId>reflections</artifactId>
      <groupId>org.reflections</groupId>
      <version>${java-reflection-version}</version>
    </dependency>

  </dependencies>
  <description>webb app to display algorithm in browser</description>
  <groupId>com.AlgorithmPresenter</groupId>
  <modelVersion>4.0.0</modelVersion>
  <name>AlgorithmPresenter</name>

  <parent>
    <artifactId>spring-boot-starter-parent</artifactId>
    <groupId>org.springframework.boot</groupId>
    <relativePath/>
    <version>2.2.4.RELEASE</version> <!-- lookup parent from repository -->
  </parent>

  <properties>
    <!-- General -->
    <bootstrap-version>3.3.7</bootstrap-version>
    <checkstyle.version>3.1.0</checkstyle.version>
    <exec-maven.version>1.2.1</exec-maven.version>
    <heroku-maven.appName>algorithm-presenter</heroku-maven.appName>

    <!-- Make build platform independent -->
    <heroku-maven.version>2.0.16</heroku-maven.version>

    <!-- logging -->
    <jacoco-maven.version>0.8.5</jacoco-maven.version>

    <!-- test frameworks -->
    <jar-file-name>algorithm-presenter-0.0.1-SNAPSHOT</jar-file-name>
    <java-reflection-version>0.9.12</java-reflection-version>

    <!-- code coverage -->
    <java.version>1.8</java.version>

    <!-- linter -->
    <jquery-verison>3.1.0</jquery-verison>

    <!-- spring-boot -->
    <junit5.version>5.5.2</junit5.version>

    <!-- deployment -->
    <main-class>com.algorithmpresenter.AlgorithmPresenterApplication</main-class>
    <maven-compiler.version>3.8.0</maven-compiler.version>
    <maven-jar.version>2.4</maven-jar.version>
    <maven-surefire.version>2.22.1</maven-surefire.version>
    <mockito-version>2.8.9</mockito-version>

    <!-- Js socket client Version-->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <shade-maven.version>3.2.1</shade-maven.version>

    <!-- Bootstrap-->
    <slf4j-simple.version>1.7.25</slf4j-simple.version>

    <!-- JQuery-->
    <sockjs-client-version>1.0.2</sockjs-client-version>

    <!-- mockito version-->
    <spring-boot-maven-version>2.2.4.RELEASE</spring-boot-maven-version>

    <!-- java reflection version-->
    <stomp-websocket-version>2.3.3</stomp-websocket-version>

  </properties>

  <reporting>
    <plugins>
      <!-- code coverage -->
      <!-- select non-aggregate reports -->
      <plugin>
        <artifactId>jacoco-maven-plugin</artifactId>
        <groupId>org.jacoco</groupId>
        <reportSets>
          <reportSet>
            <reports>
              <report>report</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
    </plugins>
  </reporting>

  <version>0.0.1-SNAPSHOT</version>

</project>
